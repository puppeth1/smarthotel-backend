{
  "name": "highpuppet-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "dev": "concurrently \"npm run start:dev\" \"npm run dev --prefix dashboard\"",
    "dev:backend": "npm run start:dev",
    "dev:dashboard": "npm run dev --prefix dashboard"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "puppeteer": "^22.0.0",
    "geoip-lite": "^1.4.9",
    "firebase-admin": "^13.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "@types/geoip-lite": "^1.4.3"
  }
}
